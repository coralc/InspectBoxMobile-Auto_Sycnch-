<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@android:style/Theme.Holo.Light" />

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:textViewStyle">@style/AppTheme.TextView</item>
        <item name="android:editTextStyle">@style/AppTheme.EditText</item>
        <item name="android:buttonStyle">@style/AppTheme.ButtonText</item>
        <item name="android:spinnerStyle">@style/AppTheme.Spinner</item>
        <item name="android:listViewStyle">@style/AppTheme.ListView</item>
        <item name="android:actionBarStyle">@style/AppTheme.ActionBar</item>
    </style>
    
    <style name="AppTheme.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/AppTheme.ActionBar.TitleTextStyle</item>
        <item name="android:background">@color/traq</item>
    </style>
    
    <style name="AppTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
    <item name="android:textColor">@color/white</item>
  </style>

    <style name="AppTheme.ButtonText" parent="android:style/Widget.Button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:background">@layout/btn_blue</item>
    </style>

    <style name="AppTheme.Spinner" parent="android:style/Widget.Holo.Light.Spinner">
        <item name="android:textSize">@dimen/widget_text_size</item>
        <item name="android:background">@layout/back</item>
        <item name="android:overScrollMode">always</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:scrollbarStyle">outsideInset</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:tag">@color/traq</item>
    </style>

    <style name="AppTheme.TextView" parent="android:style/Widget.TextView">
        <item name="android:textSize">@dimen/widget_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="AppTheme.EditText" parent="android:style/Widget.EditText">
        <item name="android:textSize">@dimen/widget_text_size</item>
        <item name="android:ems">10</item>
        <item name="android:background">@layout/back</item>
    </style>
    
    <style name="AppTheme.ListView" parent="android:style/Widget.ListView">
		<item name="android:listSelector">@drawable/bg_states</item>
		<item name="android:cacheColorHint">@color/transparent</item>
		<item name="android:divider">@color/traq</item>
		<item name="android:dividerHeight">1dp</item>
		<item name="android:scrollbarAlwaysDrawHorizontalTrack">true</item>
		<item name="android:scrollbarThumbVertical">@drawable/scroll</item>
    </style>

</resources>